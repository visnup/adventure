@import 'nib'
@import 'vendor/normalize.css'

blue = #56a8e1
green = #238a58

small = 12pt
medium = 16pt
large = 24pt
x-large = 32pt
xx-large = 60pt

@font-face
  font-family '04b_03'
  src url('/fonts/04b_03__-webfont.eot')
  src url('/fonts/04b_03__-webfont.eot?iefix') format('eot'), url('/fonts/04b_03__-webfont.woff') format('woff'), url('/fonts/04b_03__-webfont.ttf') format('truetype'), url('/fonts/04b_03__-webfont.svg#webfontiFL0wwqh') format('svg')
  font-weight normal
  font-style normal
  font-size medium

@font-face
  font-family 'SQ Market'
  font-weight 300
  src url('/fonts/SQMarket-Light.otf') format("opentype")

@keyframes float
  from
    background-position 0 -460px
  to
    background-position 2354px -460px

html, body
  height 100%

body
  font-family 'SQ Market', sans-serif
  font-size medium
  background blue url('/images/clouds.png') 0 -460px repeat
  animation-name float
  animation-duration 420s
  animation-iteration-count infinite
  animation-timing-function linear

h1, h2, h3, h4, h5, h6
  font-family 'SQ Market'
  font-weight 300

.details
  opacity 0
  text-align center
  color white
  text-shadow 0 2px 2px hsla(0, 0%, 0%, 0.2)
  &.ready
    opacity 1
    transition opacity 200ms
  .start
    font-family helvetica neue
    font-weight 100
    font-size xx-large
    margin 1em 0 0
    &:before
      content 'ï£¿'
      display block
      font-family 'SQ Market'
      font-size x-large
  .location
    font-size x-large
    margin 0
    text-transform lowercase

.ground
  position relative
  margin 200px 0 0
  min-height 100%
  border-top solid 4px hsla(0, 0%, 0%, 0.4)
  background-color green
  background-image linear-gradient(top, hsla(0, 0%, 0%, 0.2), hsla(0, 0%, 0%, 0) 80px), url('/images/grass.png')
  background-repeat no-repeat, repeat

.thing
  position absolute
  font-family '04b_03'
  font-size small
  .bubble
    position absolute
    left 60px
    width 294px - 20px - 21px
    max-height 133px - 21px - 42px
    border-width 21px 20px 42px 21px
    padding 5px
    display none
    text-align center
    overflow-y auto
    white-space pre-wrap
    line-height 125%
    &.frame-0
      border-image url('data:image/png;base64,') 21 20 42 21 fill
    &.frame-1
      border-image url('data:image/png;base64,') 21 20 42 21 fill
    &.frame-2
      border-image url('data:image/png;base64,') 21 20 42 21 fill
  ::-webkit-scrollbar
    width 1ex
  ::-webkit-scrollbar-thumb:vertical
    background-color hsla(0, 0%, 0%, 0.2)
  .textarea-container
    overflow hidden
    position relative
    textarea
      position absolute
      left -100px
      width 80px
